{
  "name": "api-gateway",
  "version": "3.0.001",
  "description": "L'api c'est la vie ! Tout converge vers le gateway.",
  "scripts": {
    "crons": "npm-scripts/crons.sh",
    "setup:deve": "npm-scripts/setup-deve.sh",
    "setup:clean": "npm-scripts/setup-clean.sh",
    "test": "npm-scripts/test.sh",
    "test:standard": "node_modules/.bin/standard --verbose --fix | snazzy",
    "test:unit": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- --timeout 5000 --use_strict --recursive test/unit",
    "test:integration": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- --opts .mocharc-integration",
    "test:coverage": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- --opts .mocharc",
    "test:security": "node_modules/.bin/snyk test",
    "test:deve": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- --opts .mocharc-deve",
    "start": "DEBUG=abibao*,servicebus* ABIBAO_API_GATEWAY_NEWRELIC_APPNAME=api.deve.abibao.com node . | bunyan"
  },
  "standard": {
    "globals": [
      "beforeEach",
      "before",
      "after",
      "describe",
      "it"
    ],
    "ignore": [
      "src/www/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/abibao/api-gateway.git"
  },
  "keywords": [
    "api",
    "gateway",
    "abibao"
  ],
  "author": "team abibao",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/abibao/api-gateway/issues"
  },
  "homepage": "https://gitlab.com/abibao/api-gateway#README",
  "engines": {
    "node": "~6"
  },
  "dependencies": {
    "async": "2.1.2",
    "base64-url": "1.3.3",
    "bluebird": "3.4.6",
    "boom": "4.2.0",
    "bson": "0.5.6",
    "bunyan": "1.8.5",
    "bunyan-logstash-tcp": "0.3.4",
    "cron": "1.1.1",
    "crumb": "6.0.3",
    "cryptr": "2.0.0",
    "debug": "2.3.2",
    "dotenv": "2.0.0",
    "eraro": "0.4.1",
    "faker": "3.1.0",
    "fs-extra": "1.0.0",
    "glob": "7.1.1",
    "hapi": "15.2.0",
    "hapi-auth-basic": "4.2.0",
    "hapi-auth-jwt2": "7.2.0",
    "hoek": "4.1.0",
    "inert": "4.0.2",
    "iron": "4.0.4",
    "joi": "9.2.0",
    "jsonwebtoken": "7.1.9",
    "knex": "0.12.6",
    "lodash": "4.17.2",
    "md5": "2.2.1",
    "mysql": "2.12.0",
    "nconf": "0.8.4",
    "newrelic": "1.34.0",
    "node-uuid": "1.4.7",
    "progress": "1.1.8",
    "progress-promise": "0.0.5",
    "request": "2.78.0",
    "request-promise": "4.1.1",
    "rethinkdbdash": "2.3.26",
    "sendgrid": "4.7.1",
    "servicebus": "2.0.5",
    "servicebus-retry": "0.0.11",
    "thinky": "2.3.8",
    "vision": "4.1.0",
    "wpapi": "0.11.0"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chai-http": "3.0.0",
    "cli-color": "1.1.0",
    "codacy-coverage": "2.0.0",
    "commander": "2.9.0",
    "istanbul": "0.4.5",
    "js-object-pretty-print": "0.2.0",
    "mocha": "3.1.2",
    "mocha-lcov-reporter": "1.2.0",
    "mocha-standard": "1.0.0",
    "mustache": "2.3.0",
    "request-promise": "4.1.1",
    "rethinkdb": "2.3.3",
    "sinon": "1.17.6",
    "snazzy": "5.0.0",
    "snyk": "1.19.1",
    "standard": "8.5.0"
  }
}
