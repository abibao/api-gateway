{
  "name": "api-gateway",
  "version": "2.9.910",
  "description": "L'api c'est la vie ! Tout converge vers le gateway.",
  "scripts": {
    "auto:generate": "./npm-scripts/auto-generate.sh",
    "tools:rethinkdb:import:rece": "node tools/rethink_import_rece.js",
    "tools:rethinkdb:backup": "node tools/rethink_backup.js",
    "tools:mysql:create:answers": "node tools/mysql_create_answers.js",
    "tools:mysql:insert:answers": "node tools/mysql_insert_answers.js",
    "tools:mysql:create:users": "node tools/mysql_create_users.js",
    "tools:mysql:insert:users": "node tools/mysql_insert_users.js",
    "tools:emails:recovery": "node tools/emails_recovery.js",
    "crons": "npm-scripts/crons.sh",
    "standard:control": "node_modules/.bin/standard | snazzy",
    "standard:fix": "node_modules/.bin/standard --fix",
    "test": "npm-scripts/test-all.sh",
    "test:standard": "node_modules/.bin/standard --verbose | snazzy",
    "test:coverage": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- --timeout 15000 --recursive -R spec",
    "test:unit": "node_modules/.bin/_mocha --timeout 15000 --recursive test/unit",
    "test:integration": "node_modules/.bin/_mocha --timeout 15000 --recursive test/integration",
    "test:security": "node_modules/.bin/snyk test",
    "start": "DEBUG=abibao*,servicebus* ABIBAO_API_GATEWAY_NEWRELIC_APPNAME=api.deve.abibao.com node . | bunyan"
  },
  "standard": {
    "ignore": [
      "bin/**",
      "npm-scripts/**",
      "tools/**",
      "test/**",
      "src/www/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/abibao/api-gateway.git"
  },
  "keywords": [
    "api",
    "gateway",
    "abibao"
  ],
  "author": "team abibao",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/abibao/api-gateway/issues"
  },
  "homepage": "https://gitlab.com/abibao/api-gateway#README",
  "engines": {
    "node": "~6"
  },
  "dependencies": {
    "async": "2.1.1",
    "base64-url": "1.3.2",
    "bluebird": "3.4.6",
    "boom": "4.2.0",
    "bson": "0.5.5",
    "bunyan": "1.8.1",
    "bunyan-logstash-tcp": "0.3.4",
    "crumb": "6.0.3",
    "cryptr": "2.0.0",
    "debug": "2.2.0",
    "dotenv": "2.0.0",
    "faker": "3.1.0",
    "fs-extra": "0.30.0",
    "glob": "7.1.1",
    "hapi": "15.1.1",
    "hapi-auth-basic": "4.2.0",
    "hapi-auth-jwt2": "7.1.3",
    "hoek": "4.1.0",
    "inert": "4.0.2",
    "iron": "4.0.4",
    "joi": "9.1.1",
    "jsonwebtoken": "7.1.9",
    "knex": "0.12.5",
    "lodash": "4.16.4",
    "md5": "2.2.1",
    "mysql": "2.11.1",
    "nconf": "0.8.4",
    "newrelic": "1.31.0",
    "node-uuid": "1.4.7",
    "request": "2.75.0",
    "request-promise": "4.1.1",
    "sendgrid": "4.6.0",
    "servicebus": "2.0.5",
    "thinky": "2.3.7",
    "vision": "4.1.0",
    "wpapi": "0.11.0"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chai-http": "3.0.0",
    "cli-color": "1.1.0",
    "codacy-coverage": "2.0.0",
    "commander": "2.9.0",
    "istanbul": "0.4.5",
    "js-object-pretty-print": "0.2.0",
    "mocha": "3.1.2",
    "mocha-lcov-reporter": "1.2.0",
    "mustache": "2.2.1",
    "request-promise": "4.1.1",
    "rethinkdb": "2.3.3",
    "snazzy": "5.0.0",
    "snyk": "1.19.1",
    "standard": "8.4.0"
  }
}
